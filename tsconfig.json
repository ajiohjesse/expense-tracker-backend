{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "es2022",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "module": "Node16",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "types": ["jest"]
    },
    "exclude": ["node_modules/"],
    "include": ["src/**/*.ts", "__tests__/**/*.ts"]
}
