{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,

        /* Strictness */
        "strict": true,
        "noImplicitOverride": true,

        /* If transpiling with TypeScript: */
        "module": "NodeNext",
        "outDir": "build",
        "sourceMap": true
    },
    "exclude": ["node_modules/"],
    "include": ["src/**/*.ts", "__tests__/**/*.ts", "*.config.ts"]
}
