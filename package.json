{
    "name": "expense-tracker-backend",
    "version": "1.0.0",
    "main": "src/server.ts",
    "type": "module",
    "scripts": {
        "test": "vitest",
        "dev": "nodemon --exec tsx ./src/server.ts",
        "build:dev": "rm -rf ./build && tsc --project tsconfig.build.json",
        "build": "tsc --project tsconfig.build.json",
        "start": "node build/src/server.js",
        "start:staging": "cross-env NODE_ENV=staging node build/src/server.js",
        "db:generate": "drizzle-kit generate --config build/drizzle.config.js",
        "db:migrate": "cross-env NODE_ENV=development tsx src/db/migrate.ts",
        "db:migrate:staging": "cross-env NODE_ENV=staging tsx src/db/migrate.ts",
        "db:migrate:prod": "cross-env NODE_ENV=production tsx src/db/migrate.ts",
        "db:studio": "drizzle-kit studio --config build/drizzle.config.js",
        "db:drop": "drizzle-kit drop --config build/drizzle.config.js",
        "format": "prettier --write .",
        "generateSecrets": "node scripts/generateSecrets.mjs"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "@libsql/client": "^0.14.0",
        "@types/jsonwebtoken": "^9.0.7",
        "arctic": "^2.2.1",
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "drizzle-orm": "^0.35.3",
        "express": "^4.21.1",
        "express-async-errors": "^3.1.1",
        "helmet": "^8.0.0",
        "jsonwebtoken": "^9.0.2",
        "nanoid": "^5.0.8",
        "resend": "4.0.1-alpha.0",
        "zod": "^3.23.8",
        "zod-express-middleware": "^1.4.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.12",
        "@types/node": "^22.7.6",
        "@types/supertest": "^6.0.2",
        "@vitest/coverage-v8": "2.1.3",
        "cross-env": "^7.0.3",
        "drizzle-kit": "^0.26.2",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "supertest": "^7.0.0",
        "tsx": "^4.19.1",
        "typescript": "^5.6.3",
        "vitest": "^2.1.3"
    }
}
